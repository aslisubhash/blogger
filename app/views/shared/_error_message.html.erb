<% if target && target.errors.any? %>
  <div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <% target.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>    
  </div>
<% end %>
